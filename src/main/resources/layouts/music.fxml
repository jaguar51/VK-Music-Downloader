<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="700.0" prefWidth="600.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="5.0" xmlns="http://javafx.com/javafx/8">
    <padding>
        <Insets top="15"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>

        <GridPane hgap="10" vgap="5">
            <padding>
                <Insets bottom="15"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button text="Выделить все" onAction="#selectAll"/>
                <Button text="Снять выделение" onAction="#deselect" GridPane.columnIndex="1"/>
                <Button text="Выбрать папку для загрузки" onAction="#chooseDirectory" GridPane.columnIndex="2"/>
                <Button text="Скачать" onAction="#download" GridPane.columnIndex="3"/>
            </children>
        </GridPane>

        <ListView fx:id="listView" GridPane.rowIndex="1"/>
    </children>
</GridPane>
